<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemRootCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:id="@+id/listItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp">

        <ImageView
            android:id="@+id/entityImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:src="@mipmap/ic_launcher"
            card_view:srcCompat="@color/colorPrimary"/>

        <TextView
            android:id="@+id/entityExplicity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/entityImage"
            android:layout_alignEnd="@id/entityImage"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:background="@color/explicityBackground"
            android:gravity="center"
            android:padding="2dp"
            android:text="Explicity"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:textStyle="normal|bold"/>

        <TextView
            android:id="@+id/entityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="7dp"
            android:layout_toEndOf="@id/entityImage"
            android:maxLines="2"
            android:text="Track Title"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="normal|bold"/>

        <TextView
            android:id="@+id/entityArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/entityTitle"
            android:layout_toEndOf="@id/entityImage"
            android:maxLines="2"
            android:padding="2dp"
            android:text="Track Artist"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>