<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/frag_track_image_user"
        android:layout_width="match_parent"
        android:layout_height="330dp"/>

    <TextView
        android:id="@+id/tvTrackTitle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:maxLines="1"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_below="@id/frag_track_image_user"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvTrackArtists"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="16sp"
        android:layout_below="@id/tvTrackTitle"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/layoutPlayer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/search_results"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/round_button_pause"
            android:onClick="btnPlay_onClick"/>

        <SeekBar
            android:id="@+id/playerProgress"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/btnPlay"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvTrackDuration"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/playerProgress"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="13dp"
            android:layout_toRightOf="@id/playerProgress"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvTrackElapsed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/playerProgress"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:layout_toLeftOf="@id/playerProgress"
            android:gravity="center"/>

    </RelativeLayout>

</RelativeLayout>